<h1>Burger Time!</h1>

<h2>Burgers that have NOT been devoured</h2>

<ul>
    {{#each bugers}}
    {{#unless devoured}}
    {{> bugers/bugers-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that HAVE been devoured</h2>

<ul>
    {{#each bugers}}
    {{#if devoured}}
    {{> bugers/bugers-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ba">Burger Name:</label>
        <input type="text" id="ba" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Hungry?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured<br>
        <input type="radio" name="devoured" value="0"> Nah
    </div>

    <button type="submit">Chow Down</button>
</form>